<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/rl_me_personal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_top_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_me_personalback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/arrow2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人资料"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_me_personalname"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_me_personal"
        android:layout_marginTop="@dimen/marin_to_head"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓    名"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personal_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/login_input"
            android:hint="请输入姓名"
            android:textSize="@dimen/input_text_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me_personalxinbie"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_me_personalname"
        android:layout_marginTop="1dp"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性    别"
            android:textSize="18sp" />

        <RadioGroup
            android:id="@+id/rg_xinbie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_me_personalbirth"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_me_personalxinbie"
        android:layout_marginTop="1dp"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出生年月"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personal_birth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:background="@drawable/login_input"
            android:enabled="false"
            android:hint="点击选择"
            android:textSize="@dimen/input_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_me_personalsuozaidi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_me_personalbirth"
        android:layout_marginTop="1dp"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_personal_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/tv_personal_suozaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_personal_star"
            android:text="所在地"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personal_suozaidi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/iv_suozaidi"
            android:layout_toRightOf="@+id/tv_personal_suozaidi"
            android:background="@drawable/login_input"
            android:enabled="false"
            android:hint="点击选择"
            android:textSize="@dimen/input_text_size" />

        <ImageView
            android:id="@+id/iv_suozaidi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@drawable/arrow4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_me_personalxuexiao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rl_me_personalsuozaidi"
        android:layout_marginTop="1dp"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/iv_personal_star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/star" />

        <TextView
            android:id="@+id/tv_personal_xuexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_personal_star2"
            android:text="学      校"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personal_xuexiao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_toLeftOf="@+id/iv_xuexiao"
            android:layout_toRightOf="@+id/tv_personal_xuexiao"
            android:background="@drawable/login_input"
            android:enabled="false"
            android:hint="点击选择"
            android:textSize="@dimen/input_text_size" />

        <ImageView
            android:id="@+id/iv_xuexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:src="@drawable/arrow4" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_me_personaljieshao"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/rl_me_personalxuexiao"
        android:layout_marginTop="@dimen/marin_to_head"
        android:background="@drawable/login_input"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_personal_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:text="自我简介"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_personal_jieshao"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/tv_personal_jieshao"
            android:background="@drawable/login_input"
            android:gravity="top"
            android:hint="未填写"
            android:singleLine="false"
            android:textSize="@dimen/input_text_size" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_update_person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_me_personaljieshao"
        android:layout_centerHorizontal="true"
        android:text="提交" />

</RelativeLayout>
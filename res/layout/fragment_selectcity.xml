<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/rl_selectcity"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_top_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_selectcity_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/arrow2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="选择城市"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_curcity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/rl_selectcity"
        android:layout_marginTop="@dimen/marin_to_head"
        android:background="#fff" >

        <TextView
            android:id="@+id/tv_curcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="当前城市："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_curcity1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_curcity"
            android:text="武汉市"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_curcity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="17dp"
            android:src="@drawable/add_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_mt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_curcity"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text="手动选择"
        android:textColor="#9f9f9f" />

    <ListView
        android:id="@+id/lv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_mt"
        android:layout_marginTop="16dp" >
    </ListView>

</RelativeLayout>
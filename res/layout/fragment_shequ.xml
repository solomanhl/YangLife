<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/rl_shequ"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_top_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="社区"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_shequ_bankuai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:background="@drawable/pal_icon1" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_shequ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_shequ"
        android:layout_marginTop="@dimen/marin_to_head"
        android:layout_toLeftOf="@+id/rl_shequ_fenlei" >
    </ListView>

    <RelativeLayout
        android:id="@+id/rl_shequ_fenlei"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_shequ"
        android:background="#fff"
        android:visibility="gone" >

        <ListView
            android:id="@+id/lv_bankuai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_mt"
            android:layout_marginTop="16dp" >
        </ListView>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/rl_shequ_fayan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_top_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/iv_shequ_fayan_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/arrow2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="讨论详情"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_shequ_fayan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rl_shequ_fayaninput"
        android:layout_below="@+id/rl_shequ_fayan"
        android:layout_marginTop="@dimen/marin_to_head" >
    </ListView>

    <RelativeLayout
        android:id="@+id/rl_shequ_fayaninput"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <EditText
            android:id="@+id/et_shequ_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toLeftOf="@+id/btn_shequ_msg_send"
            android:maxLines="3"
            android:minLines="1"
            android:singleLine="false" >
        </EditText>

        <Button
            android:id="@+id/btn_shequ_msg_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text="发送" />
    </RelativeLayout>

</RelativeLayout>